{
  "name": "@archivas/sdk",
  "version": "1.4.0",
  "description": "Official TypeScript SDK for Archivas blockchain (v1.1.0 API)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "verify": "tsx scripts/verify-connection.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build && npm test",
    "release": "npm run build && npm test && npm publish --access public"
  },
  "keywords": [
    "archivas",
    "blockchain",
    "wallet",
    "crypto",
    "ed25519",
    "bech32",
    "proof-of-space"
  ],
  "author": "Archivas Network",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArchivasNetwork/archivas-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/ArchivasNetwork/archivas-sdk/issues"
  },
  "homepage": "https://github.com/ArchivasNetwork/archivas-sdk#readme",
  "dependencies": {
    "@noble/curves": "^1.4.0",
    "@noble/hashes": "^1.5.0",
    "bech32": "^2.0.0",
    "bip39": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

